CC = c++

CPP_FLAGS = -Wall -Wextra -Werror -std=c++98

NAME = Interface

INC_DIR =	.

SRC =	main.cpp\
		MateriaCure.cpp\
		MateriaIce.cpp\
		AMateria.cpp\
		

OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CPP_FLAGS) $(OBJ) -o $(NAME)
	
%.o: %.cpp
	@$(CC) $(CPP_FLAGS) -I $(INC_DIR) -c $< -o $@

clean:
	@rm -rf $(OBJ)

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: all, clean, fclean, re